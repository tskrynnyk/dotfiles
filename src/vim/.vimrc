" ------------------------------------------------------------------------------
" ~/.vimrc

syntax on

" ------------------------------------------------------------------------------

set number
set numberwidth=4
set relativenumber

" ------------------------------------------------------------------------------

set smarttab
set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4

" ------------------------------------------------------------------------------

set wildmenu
set wildmode=full
set wildignore+=*.aux,*.log,*.class,*.o,*.obj

" ------------------------------------------------------------------------------

set showbreak=+
set listchars=tab:▸\ ,nbsp:·,eol:¬

" ------------------------------------------------------------------------------

set modeline
set modelines=2

" ------------------------------------------------------------------------------

set visualbell

" ------------------------------------------------------------------------------

set mousehide
