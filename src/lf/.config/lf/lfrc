# ------------------------------------------------------------------------------
# ~/.config/lf/lfrc

set shell bash
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set number
set relativenumber
set hidden
set info size:time
set tabstop 4
set ratios 2:3:4
set timefmt "Mon, 02 Jan 2006 15:04:05 MST"

set cursorpreviewfmt "\033[7m"

# ------------------------------------------------------------------------------

:source ~/.config/lf/lfrc.local
